<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    form {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px #ccc;
        text-align: center;
    }

    .form-control {
        margin-bottom: 10px;
        width: 300px;
    }

    .form-logo {
        width: 100px;
        height: 60px;
        margin-bottom: 20px;
    }

    .form-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>
<form method="post" action="/taiKhoan/update/{{this._id}}" style="background-color: antiquewhite;"
    enctype="multipart/form-data">
    <div class="form-title">Update tài khoản</div>
    <div class="mb-3">
        <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên tài khoản"
            value="{{this.name}}">
    </div>
    <div class="mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email tài khoản"
            value="{{this.email}}">
    </div>
    <div class="mb-3">
        <input type="password" class="form-control" id="password" name="password" placeholder="Nhập mật khẩu tài khoản">
    </div>
    <div class="mb-3" style="justify-content: start;">
        <label for="avatar">Ảnh sản phẩm</label>
    </div>
    <div class="mb-3">

        <input type="file" id="image" name="image" value="{{this.image}}">
    </div>
    <div class="mb-3">
        <input type="text" class="form-control" id="role" name="role" placeholder="Nhập trạng thái tài khoản"
            value="{{this.role}}">
    </div>

    <button type="submit" class="btn btn-success">Sửa tài khoản</button>
</form>